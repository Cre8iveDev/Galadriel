<div class="hero banner-wrapper" id="home">
    <div class="banner-one__nav">
        <a href="#" class="banner-one__nav-left"><i class="fa fa-angle-left"></i><!-- /.fa fa-angle-left --></a>
        <a href="#" class="banner-one__nav-right"><i class="fa fa-angle-right"></i>
            <!-- /.fa fa-angle-right --></a>
    </div><!-- /.banner-one__nav -->
    <section class="banner-one banner-carousel__one owl-theme owl-carousel">
        <div class="item">
            <div class="banner-one__slide  banner-one__slide-one" style="background-image: url({{ 'slider-1-2.jpg' | asset_url }});">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            <h3 class="banner-one__title banner-one__light-color">Introducing <br>
                                Creatic Template</h3>
                            <p class="banner-one__text banner-one__light-color">Excepteur sint occaecat
                                cupidatat non
                                proident sunt in culpa qui officia <br> deserunt mollit anim id est laborum.</p>
                            <div class="banner-one__btn-block">
                                <a href="#" class="thm-btn banner-one__btn">Discover More</a>
                            </div><!-- /.btn-block -->
                        </div><!-- /.col-lg-12 -->
                    </div><!-- /.row -->
                </div><!-- /.container -->
            </div><!-- /.banner-one__slide -->
        </div><!-- /.item -->
        <div class="item">
            <div class="banner-one__slide  banner-one__slide-two"
                style="background-image: url({{ 'slider-1-1.jpg' | asset_url }});">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            <h3 class="banner-one__title banner-one__light-color">Shopify <br>
                                Online Store 2.0</h3>
                            <p class="banner-one__text banner-one__light-color">Lorem ipsum dolor sit 
                            amet, consectetur adipiscing elit. Vestibulum fringilla <br>  a leo bibendum facilisis.</p>
                            <div class="banner-one__btn-block">
                                <a href="#" class="thm-btn banner-one__btn">Discover More</a>
                            </div><!-- /.btn-block -->
                        </div><!-- /.col-lg-12 -->
                    </div><!-- /.row -->
                </div><!-- /.container -->
            </div><!-- /.banner-one__slide -->
        </div><!-- /.item -->
    </section><!-- /.banner-one -->
</div><!-- /.banner-wrapper -->

{% schema %}
{
    "name": "Hero Section",
    "blocks": [
        {
            "type": "image_picker",
            "name": "Slider image",
            "limit": 1
        },
        {
            "type": "text",
            "label": "Alt text",
            "default": "Awesome slider image"
        },
        {
            "type": "header",
            "label": "Slide headline",
            "default": "Awesome slider headline"
        },
        {
            "type": "text",
            "label": "Description",
            "default": "Awesome slider description"
        },
        {
            "type": "checkbox",
            "label": "Show slider button"
        },
        {
            "type": "url",
            "label": "Button URL"
        }
    ]
}
{% endschema %}