<footer class="site-footer">
    <div class="container">
        <p class="site-footer__copy">{{ section.settings.copyright }}</a></p>
        <!-- /.site-footer__copy -->
        <div class="site-footer__social">
            {% for block in section.blocks %}
                <a href="{{ block.settings.social_link }}"><i class="{{ block.settings.fa_class }}"></i></a>
            {% endfor %}
        </div><!-- /.site-footer__social -->
    </div><!-- /.container -->
</footer><!-- /.site-footer -->

{{' jquery.validate.min.js' | asset_url | script_tag }}

{% schema %}
{
    "name": "Footer",
    "settings": [
        {
            "type": "textarea",
            "id": "copyright",
            "label": "Copyright",
            "default": "Â© 2022 All rights reserved."
        }
    ],
    "max_blocks": 8,
    "blocks": [
        {
            "type": "social",
            "name": "Social Account",
            "settings": [
                {
                    "type": "text",
                    "id": "fa_class",
                    "label": "Fontawesome social media icon class"
                },
                {
                    "type": "text",
                    "id": "social_link",
                    "label": "Your social media URL"
                }
            ]
        }
    ]
}
{% endschema %}