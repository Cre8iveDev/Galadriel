<section class="section-blogs">
    <div class="container">
        <div class="row">
            
            {% assign allBlogs = 'news,projects' | split: ',' %}
            {% assign featArticles = false %}

            {% for featBlog in allBlogs %}
                {% if blogs[blog].articles %}
                    {% assign featArticles = featArticles | concat: blogs[featBlog].articles %}
                {% else %}
                    {% assign featArticles = blogs[featBlog].articles %}
                {% endif %}
            {% endfor %}

            {% if featArticles %}
                {% assign featArticles = featArticles | sort: 'published_at' | reverse %}
                {% for article in featArticles lmiti: 10 %}
                    {{ article.title }} 
                    {{ article.published_at }}
                {% endfor %}
            {% endif %}

        </div>
    </div>
</section>

{% stylesheet %}
    .section-blogs {
        padding-top: 66px;
    }
{% endstylesheet %}

