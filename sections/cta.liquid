<section class="cta-one">
    <div class="container">
        <h2 class="cta-one__title">{{ section.settings.section_heading }}</h2><!-- /.cta-one__title -->
        <div class="cta-one__button-block">
            <a href="{{ section.settings.btn_link }}" class="thm-btn">{{ section.settings.btn_text }}</a><!-- /.thm-btn -->
        </div><!-- /.cta-one__button-block -->
    </div><!-- /.container -->
</section><!-- /.cta-one -->

{% schema %}
{
    "name": "CTA",
    "settings": [
        {
            "type": "text",
            "id": "section_heading",
            "label": "Section heading",
            "default": "Join us today. Are you ready for a game changer?"
        },
        {
            "type": "text",
            "id": "btn_text",
            "label": "Button text",
            "default": "Join now"
        },
        {
            "type": "textarea",
            "id": "btn_link",
            "label": "Button link",
            "default": "https://www.arnuld.net"
        }
    ]
}
{% endschema %}