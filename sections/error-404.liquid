<h1>{{ section.settings.title }}</h1>
<p>{{ section.settings.subtext }}</p>

{% schema %}
{
    "name": "Template 404",
    "tag": "section",
    "class": "flex items-center justify-center text-center py-7 h-screen align-middle",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "Page not found",
            "label": "404 Heading"
        },
        {
            "type": "text",
            "id": "subtext",
            "default": "404",
            "label": "404 Subtext"
        }
    ]
}
{% endschema %}