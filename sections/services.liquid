<section class="service-one thm-gray-bg">
    <div class="container">
        <div class="block-title text-center">
            <h2 class="block-title__title">{{ section.settings.section_heading }}</h2><!-- /.block-title__title -->
            <span class="block-title__line"></span><!-- /.block-title__line -->
            <p class="block-title__text">{{ section.settings.section_description }}</p><!-- /.block-title__text -->
        </div><!-- /.block-title -->
        <div class="service-one__carousel owl-carousel owl-theme">            
            {% for block in section.blocks %}
                <div class="item">
                    <div class="service-one__single">
                        <img src="{{ block.settings.block_icon | img_url: 'large' }}" alt="{{ block.settings.block_heading | downcase }}">
                        <h2 class="service-one__title"><a href="#">{{ block.settings.block_heading }}</a></h2><!-- /.service-one__title -->
                        <p class="service-one__text">{{ block.settings.block_description }}</p><!-- /.service-one__text -->
                    </div><!-- /.service-one__single -->
                </div><!-- /.item -->
            {% endfor %}
        </div><!-- /.service-one__carousel owl-carousel owl-theme -->
    </div><!-- /.container -->
</section><!-- /.service-one -->

{% schema %}
{
    "name": "Services Section",
    "settings": [
        {
            "type": "text",
            "id": "section_heading",
            "label": "Section heading",
            "default": "Services we offer"
        },
        {
            "type": "textarea",
            "id": "section_description",
            "label": "Section description",
            "default": "Replace this text from inside the Customizer > Services"
        }
    ],
    "max_blocks": 10,
    "blocks": [
        {
            "type": "services",
            "name": "Services block",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "block_icon",
                    "label": "Upload an icon"
                },
                {
                    "type": "text",
                    "id": "block_heading",
                    "label": "Block heading",
                    "default": "Replace this text from inside the Customizer > Services"
                },
                {
                    "type": "textarea",
                    "id": "block_description",
                    "label": "Replace this text from inside the Customizer > Services"
                }
            ]
        }
    ]
}
{% endschema %}