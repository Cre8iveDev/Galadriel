<section class="testimonials-one">
    <div class="container">
        <div class="testimonials-one__carousel owl-carousel owl-theme">                  
            {% for block in section.blocks %}
            <div class="item">
                <div class="testimonials-one__single">
                    {% if block.settings.block_icon != blank %}
                        <img src="{{ block.settings.block_icon }}">
                    {% else %}
                        <img src="{{ 'testi-qoute-1-1.png' | asset_url }}">
                    {% endif %}
                    <p class="testimonials-one__text">{{ block.settings.block_text }}</p><!-- /.testimonials-one__text -->
                    <h3 class="testimonials-one__name">{{ block.settings.block_reviewer }}</h3><!-- /.testimonials-one__name -->
                </div><!-- /.testimonials-one__single -->
            </div><!-- /.item -->
            {% endfor %}
        </div><!-- /.testimonials-one__carousel -->
    </div><!-- /.container -->
</section><!-- /.testimonials-one -->

{% schema %}
{
    "name": "Testimonial Section",
    "max_blocks": 5,
    "blocks": [
        {
            "type": "testimonials",
            "name": "Testimonial",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "block_icon",
                    "label": "Upload an icon",
                    "default": "{{ 'testi-qoute-1-1.png' | asset_url }}"
                },
                {
                    "type": "textarea",
                    "id": "block_text",
                    "label": "Testimonial",
                    "default": "Replace this text from inside the Customizer > Testimonials"
                },
                {
                    "type": "text",
                    "id": "block_reviewer",
                    "label": "Reviewer"
                }
            ]
        }
    ]
}
{% endschema %}