<section class="progress-one">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-lg-12">
                <div class="progress-one__content">
                    <div class="block-title text-left">
                        <h2 class="block-title__title">{{ section.settings.section_heading }}</h2><!-- /.block-title__title -->
                        <span class="block-title__line"></span><!-- /.block-title__line -->
                        <p class="block-title__text">{{ section.settings.section_description }}</p><!-- /.block-title__text -->
                    </div><!-- /.block-title -->
                </div><!-- /.progress-one__content -->
                <div class="row">
                    {% for block in section.blocks %}
                        <div class="col-md-6">
                            <div class="progress-one__single">
                                <div class="progress-one__top">
                                    <div class="circular-progress" data-color="#ed2c41" id="progress-1"
                                        data-progress-count="{{ block.settings.block_range }}">
                                        <div class="other-ball" id="progress-{{ forloop.index }}-other-ball"></div>
                                        <!-- /.other-ball -->
                                    </div><!-- /.circular-progress -->
                                    <div class="progress-one__text-box">
                                        {% assign range_val = block.settings.block_range %}
                                        {% case range_val %}
                                            {% when range_val == 0.1 %}
                                                10%
                                            {% when range_val == 0.2 %}
                                                20%
                                            {% when range_val == 0.3 %}
                                                30%
                                            {% when range_val == 0.4 %}
                                                40%
                                            {% when range_val == 0.5 %}
                                                50%
                                            {% when range_val == 0.6 %}
                                                60%
                                            {% when range_val == 0.7 %}
                                                70%
                                            {% when range_val == 0.8 %}
                                                80%
                                            {% when range_val == 0.9 %}
                                                90%
                                            {% when range_val == 1 %}
                                                100%
                                        {% endcase %}
                                    </div><!-- /.progress-one__text-box -->
                                </div><!-- /.progress-one__top -->
                                <h3 class="progress-one__title">{{ block.settings.block_text }}</h3>
                            </div><!-- /.progress-one__single -->
                        </div><!-- /.col-md-6 -->
                    {% endfor %}
                </div><!-- /.row -->
            </div><!-- /.col-lg-6 -->
            <div class="col-xl-6 col-lg-12 d-flex justify-content-xl-end">
                <div class="video-one wow fadeInRight" data-wow-duration="1500ms">
                    <img src="{{ section.settings.section_image | img_url: 'large' }}" alt="{{ section.settings.section_heading | downcase }}">
                    <a href="#" class="video-one__play"><i class="fa fa-play"></i><!-- /.fa fa-play --></a>
                    <!-- /.video-one__play -->
                </div><!-- /.video-one -->
            </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.progress-one -->

{% schema %}
{
    "name": "Progress section",
    "settings": [
        {
            "type": "image_picker",
            "id": "section_image",
            "label": "Upload an image"
        },
        {
            "type": "text",
            "id": "section_heading",
            "label": "Heading",
            "default": "Replace this text from inside the Customizer > Progress"
        },
        {
            "type": "textarea",
            "id": "section_description",
            "label": "Description",
            "default": "We believe that success is achieved through a highly collaborative interaction, so that we can work together to identify and evaluate opportunities beyond your current operations."
        }
    ],
    "blocks": [
        {
            "type": "expertise",
            "name": "Expertise",
            "settings": [
                {
                    "type": "range",
                    "id": "progress_range",
                    "min": 0,
                    "max": 1,
                    "step": 0.1,
                    "unit": "%",
                    "label": "Select a range",
                    "default": 0.9
                },
                {
                    "type": "text",
                    "id": "block_text",
                    "label": "Image description"
                }
            ]
        }
    ]
}
{% endschema %}