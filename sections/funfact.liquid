<section class="funfact-one">
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-lg-8">
                <div class="funfact-one__content">
                    <div class="block-title text-left">
                        <h2 class="block-title__title">{{ section.settings.section_heading }}</h2><!-- /.block-title__title -->
                        <span class="block-title__line"></span><!-- /.block-title__line -->
                        <p class="block-title__text">{{ section.settings.section_description }}</p><!-- /.block-title__text -->
                    </div><!-- /.block-title -->
                    <div class="funfact-one__wrap">
                        {% for block in section.blocks %}
                            <div class="funfact-one__single text-center">
                                <div class="funfact-one__single-inner">
                                    <h2 class="funfact-one__number counter">{{ block.settings.block_heading }}</h2><!-- /.funfact-one__number -->
                                    <p class="funfact-one__text">{{ block.settings.block_text }}</p><!-- /.funfact-one__text -->
                                </div><!-- /.funfact-one__single-inner -->
                            </div><!-- /.funfact-one__single -->
                        {% endfor %}
                    </div><!-- /.funfact-one__wrap -->
                </div><!-- /.funfact-one__content -->
            </div><!-- /.col-lg-8 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.funfact-one -->

{% style %}
    .funfact-one { background-image: url({{ section.settings.section_bg_image | img_url: 'master' }}); }
    .funfact-one__single-inner { background-color: {{ section.blocks.block_bgcolor }}; }
    .funfact-one__single-inner:hover { background-color: {{ section.blocks.block_bgcolor_hover }}; }
{% endstyle %}

{% schema %}
{
    "name": "Funfact",
    "settings": [
        {
            "type": "text",
            "id": "section_heading",
            "label": "Section heading",
            "default": "We Word Hard: We Don't Waste Time"
        },
        {
            "type": "textarea",
            "id": "section_description",
            "label": "Section description"
        },
        {
            "type": "image_picker",
            "id": "section_bg_image",
            "label": "Background image"
        }
    ],
    "max_blocks": 3,
    "blocks": [
        {
            "type": "funfact",
            "name": "Block",
            "settings": [
                {
                    "type": "color",
                    "id": "block_bgcolor",
                    "label": "Background color",
                    "default": "#2d2a2c"
                },
                {
                    "type": "color",
                    "id": "block_bgcolor_hover",
                    "label": "Background color hover",
                    "default": "#ed2c41"
                },
                {
                    "type": "text",
                    "id": "block_heading",
                    "label": "Block heading",
                    "default": "100"
                },
                {
                    "type": "text",
                    "id": "block_text",
                    "label": "Block text",
                    "default": "Change me"
                }
            ]
        }
    ]
}
{% endschema %}